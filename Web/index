  <script>
    // Utilidades
    const $ = (q, root=document) => root.querySelector(q)
    const $$ = (q, root=document) => Array.from(root.querySelectorAll(q))

    // A√±o en footer
    $('#year').textContent = new Date().getFullYear()

    // Back to top
    const topBtn = $('#backTop')
    topBtn.addEventListener('click', () => window.scrollTo({top:0, behavior:'smooth'}))
    const onScrollTop = () => {
      if (window.scrollY > 300) topBtn.classList.add('show'); else topBtn.classList.remove('show')
    }
    window.addEventListener('scroll', onScrollTop); onScrollTop()

    // Animaciones on-scroll
    const io = new IntersectionObserver(entries => {
      entries.forEach(e => {
        if (e.isIntersecting) { e.target.classList.add('in'); io.unobserve(e.target) }
      })
    }, {threshold:.15})
    $$('.reveal').forEach(el => io.observe(el))

    $1
    // Fallbacks para fotos locales del equipo (acepta variantes de nombre/extension)
    function setBestSrc(id, sources){
      const img = document.getElementById(id); if(!img) return;
      let i = 0; const tryNext = ()=>{ if(i>=sources.length) return; img.onerror = tryNext; img.src = sources[i++]; };
      // inicia intentando con el src existente y luego con las variantes
      const first = img.getAttribute('src'); const rest = sources.filter(s=>s!==first); img.onerror = ()=>{ tryNext(); };
      // Forzamos probar el primero de la lista si falla el actual
      const tester = new Image(); tester.onerror = tryNext; tester.onload = ()=>{ img.src = tester.src; };
      tester.src = first;
    }
    setBestSrc('img-sebastian', ['IMG/Sebasti√°n.jpg','IMG/Sebastian.jpg','IMG/sebastian.jpg','IMG/Sebastian.jpeg','IMG/sebastian.jpeg','IMG/Sebasti√°n.png','IMG/Sebastian.png','IMG/sebastian.png']);
    setBestSrc('img-yeison', ['IMG/Yeison.jpg','IMG/yeison.jpg','IMG/YEISON.jpg','IMG/Yeison.jpeg','IMG/yeison.jpeg','IMG/Yeison.png','IMG/yeison.png']);
    setBestSrc('img-juan', ['IMG/Juan Diego.jpg','IMG/Juan_Diego.jpg','IMG/JuanDiego.jpg','IMG/juan-diego.jpg','IMG/juan diego.jpg','IMG/juan_diego.jpg','IMG/juandiego.jpg','IMG/JuanDiego.png','IMG/juan-diego.png']);

    // Cards: expandir con teclado Enter/Espacio
    $$('#casos .card').forEach(card => {
      card.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          const det = card.querySelector('details')
          if (det) { det.open = !det.open }
          e.preventDefault()
        }
      })
    })

    // Gr√°fico de barras vanilla canvas
    const ctx = $('#barChart').getContext('2d')
    const labels = ['Factor humano', 'Sensor/Software', 'Mec√°nico', 'Entorno', 'Organizaci√≥n']
    const values = [42, 33, 28, 19, 24] // demo

    const W = ctx.canvas.width, H = ctx.canvas.height
    const pad = 48, axis = {left:pad, top: pad, right: W - pad, bottom: H - pad}
    const maxVal = Math.max(...values) * 1.2
    const bw = (axis.right - axis.left) / values.length * .6

    // Fondo
    const grad = ctx.createLinearGradient(0,0,0,H)
    grad.addColorStop(0,'rgba(124,255,183,0.15)')
    grad.addColorStop(1,'rgba(102,224,255,0.09)')
    ctx.fillStyle = grad
    ctx.fillRect(0,0,W,H)

    // Ejes
    ctx.strokeStyle = 'rgba(255,255,255,0.25)'
    ctx.lineWidth = 1
    ctx.beginPath()
    ctx.moveTo(axis.left, axis.top)
    ctx.lineTo(axis.left, axis.bottom)
    ctx.lineTo(axis.right, axis.bottom)
    ctx.stroke()

    // L√≠neas gu√≠a y etiquetas Y
    ctx.fillStyle = 'rgba(230,237,247,0.75)'
    ctx.font = '12px Inter'
    const steps = 4
    for (let i=1;i<=steps;i++){
      const y = axis.bottom - (i/steps)*(axis.bottom-axis.top)
      ctx.strokeStyle = 'rgba(255,255,255,0.08)';
      ctx.beginPath(); ctx.moveTo(axis.left, y); ctx.lineTo(axis.right, y); ctx.stroke()
      const val = Math.round((i/steps)*maxVal)
      ctx.fillText(val.toString(), axis.left-32, y+4)
    }

    // Barras con animaci√≥n simple
    let t = 0
    const animate = () => {
      t = Math.min(1, t + 0.02)
      // borrar √°rea de dibujo de barras
      ctx.clearRect(axis.left+1, axis.top+1, axis.right-axis.left-2, axis.bottom-axis.top-2)
      // redibujar rejilla ligera
      ctx.strokeStyle = 'rgba(255,255,255,0.08)';
      for (let i=1;i<=steps;i++){
        const y = axis.bottom - (i/steps)*(axis.bottom-axis.top)
        ctx.beginPath(); ctx.moveTo(axis.left, y); ctx.lineTo(axis.right, y); ctx.stroke()
      }

      values.forEach((v, i) => {
        const xCenter = axis.left + (i+0.5) * ((axis.right-axis.left)/values.length)
        const half = bw/2
        const barH = (v/maxVal) * (axis.bottom-axis.top) * t
        const x = xCenter - half
        const y = axis.bottom - barH
        // gradiente barra
        const g = ctx.createLinearGradient(0,y,0,axis.bottom)
        g.addColorStop(0,'#66e0ff'); g.addColorStop(1,'#7cffb7')
        ctx.fillStyle = g
        ctx.fillRect(x, y, bw, barH)
        // etiqueta X
        ctx.fillStyle = 'rgba(230,237,247,0.85)'
        ctx.textAlign = 'center'
        // Multil√≠nea simple
        const words = labels[i].split(' ')
        if(words.length>1){
          ctx.fillText(words[0], xCenter, axis.bottom+18)
          ctx.fillText(words.slice(1).join(' '), xCenter, axis.bottom+34)
        } else { ctx.fillText(labels[i], xCenter, axis.bottom+20) }
      })
      if (t < 1) requestAnimationFrame(animate)
    }
    animate()
  </script>
